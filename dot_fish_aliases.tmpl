{{- if eq .location "home" }}
# home only
alias cdh='cd ~/projects/codeforamerica/ohana-web-search'
alias cdoh='cd ~/projects/codeforamerica/ohana-api'
alias blog='cd ~/projects/monfresh/blog'
alias smco='cd ~/projects/smcgov/ohana-api-smc'
alias smcw='cd ~/projects/smcgov/SMC-Connect'
